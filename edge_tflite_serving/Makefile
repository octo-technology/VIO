SHELL := /bin/bash
.SHELLFLAGS = -ec
.ONESHELL:
.SILENT:

.EXPORT_ALL_VARIABLES:
REPO_DIRECTORY:=$(shell pwd)
PYTHONPATH:=${PYTHONPATH}:${REPO_DIRECTORY}

.PHONY: help
help:
	echo "‚ùì Use \`make <target>'"
	grep -E '^\.PHONY: [a-zA-Z0-9_-]+ .*?## .*$$' $(MAKEFILE_LIST) | \
		awk 'BEGIN {FS = "(: |##)"}; {printf "\033[36m%-30s\033[0m %s\n", $$2, $$3}'

.PHONY: conda_env  ## üêç Create a Python conda environment
conda_env:
	conda create --name edge_tflite_serving python=3.7 -y

.PHONY: dependencies  ## ‚è¨ Install dependencies
dependencies:
	pip3 install https://dl.google.com/coral/python/tflite_runtime-2.1.0.post1-cp37-cp37m-macosx_10_14_x86_64.whl && pip install -r requirements.txt

.PHONY: dev-dependencies  ## ‚è¨ Install tests dependencies
dev-dependencies:
	pip install -r requirements-dev.txt

.PHONY: lint  ## üêç Lint Python files to conform to the PEP 8 style guide
lint:
	flake8 --count --show-source --statistics --exclude venv*

.PHONY: autopep8  ## üêç Automatically formats Python code to conform to the PEP 8 style guide
autopep8:
	autopep8 --in-place --aggressive -r tflite_serving


.PHONY: tests  ## ‚úÖ Launch the unit tests
tests:
	pytest tests

.PHONY: edge_tflite_serving  ## ‚úÖ Launch the serving app
edge_tflite_serving:
	uvicorn tflite_server:app --reload --port 8501 --host 0.0.0.0
